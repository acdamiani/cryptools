{
  "name": "cryptools",
  "description": "An open source cryptography reference website",
  "version": "1.0.0",
  "private": true,
  "author": "August Damiani <damiani.august@gmail.com> (@acdamiani)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "website",
    "cryptography",
    "react"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"./**/*.+(ts|js|tsx)\"",
    "lint-fix": "eslint --ignore-path .gitignore --fix \"./**/*.+(ts|js|tsx)\"",
    "format": "prettier --ignore-path .gitignore \"./**/*.+(ts|js|tsx)\" --write",
    "postinstall": "husky install",
    "analyze": "cross-env ANALYZE=true next build",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'test/**/*.spec.ts'"
  },
  "lint-staged": {
    "./**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "@next/font": "13.2.4",
    "@primer/octicons-react": "18.3.0",
    "better-react-mathjax": "2.0.2",
    "big-integer": "1.6.51",
    "classnames": "2.3.2",
    "copy-to-clipboard": "3.3.3",
    "detect-browser": "5.3.0",
    "file-saver": "2.0.5",
    "next": "13.2.4",
    "normalize.css": "8.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@next/bundle-analyzer": "13.2.4",
    "@svgr/webpack": "6.5.1",
    "@types/file-saver": "2.0.5",
    "@types/mocha": "10.0.1",
    "@types/node": "18.15.0",
    "@types/react": "18.0.31",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "assert": "2.0.0",
    "cheerio": "1.0.0-rc.12",
    "cross-env": "7.0.3",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "eslint-config-prettier": "8.10.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "mocha": "10.2.0",
    "next-sitemap": "4.0.5",
    "prettier": "2.8.4",
    "shiki": "0.14.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5"
  }
}
